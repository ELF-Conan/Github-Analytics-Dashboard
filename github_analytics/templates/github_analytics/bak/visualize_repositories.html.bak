{% extends "github_analytics/base.html" %}

{% block content %}
    <h2>Visualize Repositories</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>URL</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for repo in repos %}
            <tr>
                <td>{{ repo.github_repo_id }}</td>
                <td>{{ repo.name }}</td>
                <td><a href="{{ repo.repository_url }}" target="_blank">{{ repo.repository_url }}</a></td>
                <td>{{ repo.description }}</td>
            </tr>
            <li><a href="{% url 'commit_frequency' repo.github_repo_id %}">{{ repo.name }}</a> - <span>{{ repo.description }}</span></li>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}